@{
    ViewBag.Title = "413 - Grade Calculator";
}

<body>
    <script src="~/js/site.js"></script>
    <h3>Grade Calculator</h3>
    <h5>Enter your scores for each course section below.</h5>
    <form>
        <label>Assignments</label>
        <input id="assignments" placeholder="99" /> / 100%<br /><br />
        <label>Group Project</label>
        <input id="projects" placeholder="99" /> / 100%<br /><br />
        <label>Quizzes</label>
        <input id="quizzes" placeholder="99" /> / 100%<br /><br />
        <label>Exams</label>
        <input id="exams" placeholder="99" /> / 100%<br /><br />
        <label>INTEX</label>
        <input id="intex" placeholder="99" /> / 100%<br /><br />
        <input type="submit" id="calculateGrades" value="Submit Grades" />
    </form>
</body>